@model BookListMVC.Models.Book
@{
    ViewData["Title"] = "Upsert";
}
<br />

<h2 class="text-info"> @(Model.ID != 0? "Edit" : "Create")</h2>

<div class="container border" style="padding: 30px">

    <form method="post">
        @if(Model.ID != 0)
        {
            <input type="hidden" asp-for="ID" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row" >
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6" >
                <input class="form-control" asp-for="Name" type="text"/>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group row" >
            <div class="col-3">
                <label asp-for="Author"></label>
            </div>
            <div class="col-6" >
                <input class="form-control" asp-for="Author" type="text"/>
                <span class="text-danger" asp-validation-for="Author"></span>
            </div>
        </div>
        <div class="form-group row" >
            <div class="col-3">
                <label asp-for="ISBN"></label>
            </div>
            <div class="col-6" >
                <input class="form-control" asp-for="ISBN" type="text"/>
                <span class="text-danger" asp-validation-for="ISBN"></span>
            </div>
        </div>
        <div class="form-group row" >
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control" >@(Model.ID !=0? "Update":"Create")</button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control"> Back To List</a>
               
            </div>
        </div>
    </form>
</div>
@section Scripts{
<partial name="_ValidationScriptsPartial"/>

}

